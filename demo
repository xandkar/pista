#! /bin/bash

set -e

rm -f  a b c d e
mkfifo a b c d e

mem_used() {
    free -h | awk '/^Mem:/ {print $3; exit 0}'
}

while :; do echo $((i++)) > a; sleep 1; done &
while :; do mem_used      > b; sleep 1; done &
echo  'will expire'       > c &
(echo 'will error'        > d; sleep 1; rm d) &
while :; do date          > e; sleep 1; done &

./pista \
    -l 0 \
    -i 0.5 \
    a  5 2 \
    b 10 2 \
    c 15 2 \
    d 15 5 \
    e 20 2
